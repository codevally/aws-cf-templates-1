{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "Create a group and managed policy for accessing bucket for internal file sharing, and ensure the right list of the user are added to the group.",

  "Parameters" : {
    "BucketName" : {
      "Description" : "Name of the S3 bucket for internal sharing.",
      "Type" : "String",
      "Default": "61-1-xxx-data"
    },
    "ReadWriteDeleteGroupName" : {
      "Description" : "Name of the Group for Users to access S3 bucket for internal sharing.",
      "Type" : "String"
    }
  },

  "Resources": {

    "ManagedPolicyS3": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description": "Managed Policy for accessing S3 bucket (read/write/delete)",
        "PolicyDocument" : {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "s3:ListAllMyBuckets"
              ],
              "Resource": "arn:aws:s3:::*"
            },
            {
              "Effect": "Allow",
              "Action": [
                "s3:ListBucket",
                "s3:GetBucketLocation"
              ],
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "BucketName"
                    }
                  ]
                ]
              }
            },
            {
              "Effect": "Allow",
              "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject"
              ],
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "BucketName"
                    },
                    "/*"
                  ]
                ]
              }
            }
          ]
        },
        "Groups" : [
          { "Ref": "ReadWriteDeleteGroupName" }
        ]
      }
    }

  }
}