{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "Create base infrastructure for a salt-master server at Sydney (including VPC, security groups for EC2s and VPN).",

  "Parameters" : {
    "NewProjectTag" : {
      "Type" : "String",
      "Description" : "New tag to be used for tagging related sources.",
    },
    "NewVpcCIDRFirst2Parts" : {
      "Type" : "String",
      "Description" : "The first 2 parts of the CIDR (e.g. 61.10) to be assigned to the VPC.",
      "MinLength": "3",
      "MaxLength": "7",
      "AllowedPattern": "(\\d{1,3})\\.(\\d{1,3})",
      "ConstraintDescription": "must be in the form x.x"
    },
    "NewVpcSubnetZone" : {
      "Type" : "String",
      "Description" : "The Availability Zone of the default subnet.",
      "Default": "ap-southeast-2a"
    }
  },

  "Resources": {

    "ProjectVpc": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": { "Fn::Join" : ["", [{"Ref" : "NewVpcCIDRFirst2Parts"}, ".0.0/16"]]},
        "InstanceTenancy": "default",
        "EnableDnsSupport": "true",
        "EnableDnsHostnames": "true",
        "Tags": [
          { "Key": "Application", "Value": { "Ref": "AWS::StackName" } },
          { "Key": "Name", "Value": { "Ref": "NewProjectTag" } },
          { "Key": "Network", "Value": "Public" }
        ]
      }
    },

    "ProjectSubnetA": {
      "Type": "AWS::EC2::Subnet",
      "DependsOn": ["ProjectVpc"],
      "Properties": {
        "CidrBlock": { "Fn::Join" : ["", [{"Ref" : "NewVpcCIDRFirst2Parts"}, ".0.0/20"]]},
        "AvailabilityZone": { "Ref": "NewVpcSubnetZone" },
        "VpcId": { "Ref": "ProjectVpc" },
        "Tags": [
          { "Key": "Application", "Value": { "Ref": "AWS::StackName" } },
          { "Key": "Name", "Value": { "Fn::Join" : ["-", [{"Ref" : "NewProjectTag"}, {"Ref" : "NewVpcSubnetZone"}]]} },
          { "Key": "Network", "Value": "Public" }
        ]
      }
    },
    "ProjectSubnetAclA": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "NetworkAclId": { "Ref": "ProjectNetworkAcl" },
        "SubnetId": { "Ref": "ProjectSubnetA" }
      }
    },

    "ProjectInternetGateway": {
      "Type": "AWS::EC2::InternetGateway",
      "Properties": {
        "Tags": [
          { "Key": "Application", "Value": { "Ref": "AWS::StackName" } },
          { "Key": "Name", "Value": { "Ref": "NewProjectTag" } },
          { "Key": "Network", "Value": "Public" }
        ]
      }
    },
    "ProjectGatewayAttachment1": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "DependsOn": ["ProjectVpc", "ProjectInternetGateway"],
      "Properties": {
        "VpcId": { "Ref": "ProjectVpc" },
        "InternetGatewayId": { "Ref": "ProjectInternetGateway" }
      }
    },

    "ProjectDopt": {
      "Type": "AWS::EC2::DHCPOptions",
      "Properties": {
        "Tags": [
          { "Key": "Application", "Value": { "Ref": "AWS::StackName" } },
          { "Key": "Name", "Value": { "Ref": "NewProjectTag" } }
        ],
        "DomainName": { "Fn::Join" : ["", [{"Ref" : "AWS::Region"}, ".compute.internal"]]},
        "DomainNameServers": [ "AmazonProvidedDNS" ]
      }
    },
    "ProjectVpcDhcpOptionsAssociation1": {
      "Type": "AWS::EC2::VPCDHCPOptionsAssociation",
      "DependsOn": ["ProjectVpc", "ProjectDopt"],
      "Properties": {
        "VpcId": { "Ref": "ProjectVpc" },
        "DhcpOptionsId": { "Ref": "ProjectDopt" }
      }
    },

    "ProjectNetworkAcl": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
        "VpcId": { "Ref": "ProjectVpc" },
        "Tags": [
          { "Key": "Application", "Value": { "Ref": "AWS::StackName" } },
          { "Key": "Name", "Value": { "Ref": "NewProjectTag" } }
        ]
      }
    },
    "ProjectNetworkAclEntry1": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "CidrBlock": "0.0.0.0/0",
        "Egress": "true",
        "Protocol": "-1",
        "RuleAction": "allow",
        "RuleNumber": "100",
        "NetworkAclId": { "Ref": "ProjectNetworkAcl" }
      }
    },
    "ProjectNetworkAclEntry2": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "CidrBlock": "0.0.0.0/0",
        "Protocol": "-1",
        "RuleAction": "allow",
        "RuleNumber": "100",
        "NetworkAclId": { "Ref": "ProjectNetworkAcl" }
      }
    },

    "ProjectRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "DependsOn": ["ProjectVpc"],
      "Properties": {
        "VpcId": { "Ref": "ProjectVpc" },
        "Tags": [
          { "Key": "Application", "Value": { "Ref": "AWS::StackName" } },
          { "Key": "Name",  "Value": { "Ref": "NewProjectTag" } },
          { "Key": "Network", "Value": "Public" }
        ]
      }
    },
    "ProjectRouteIgw1": {
      "Type": "AWS::EC2::Route",
      "DependsOn": ["ProjectRouteTable", "ProjectInternetGateway"],
      "Properties": {
        "DestinationCidrBlock": "0.0.0.0/0",
        "RouteTableId": { "Ref": "ProjectRouteTable" },
        "GatewayId": { "Ref": "ProjectInternetGateway" }
      }
    },


    "ProjectSubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "DependsOn": ["ProjectRouteTable", "ProjectSubnetA"],
      "Properties": {
        "RouteTableId": { "Ref": "ProjectRouteTable" },
        "SubnetId": { "Ref": "ProjectSubnetA" }
      }
    },


    "VMSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "VpcId": { "Ref": "ProjectVpc" },
        "GroupDescription": { "Ref": "NewProjectTag" },
        "SecurityGroupIngress": [
          { "IpProtocol": "icmp", "FromPort": "0", "ToPort": "-1", "CidrIp": "0.0.0.0/0" },
          { "IpProtocol": "icmp", "FromPort": "8", "ToPort": "-1", "CidrIp": "0.0.0.0/0" },
          { "IpProtocol": "tcp", "FromPort": "22", "ToPort": "22", "CidrIp": { "Fn::Join" : ["", [{"Ref" : "NewVpcCIDRFirst2Parts"}, ".0.0/16"]]} },
          { "IpProtocol": "tcp", "FromPort": "80", "ToPort": "80", "CidrIp": "0.0.0.0/0" },
          { "IpProtocol": "tcp", "FromPort": "443", "ToPort": "443", "CidrIp": "0.0.0.0/0" },
          { "IpProtocol": "tcp", "FromPort": "4505", "ToPort": "4505", "CidrIp": "0.0.0.0/0" },
          { "IpProtocol": "tcp", "FromPort": "4506", "ToPort": "4505", "CidrIp": "0.0.0.0/0" },
          { "IpProtocol": "tcp", "FromPort": "5432", "ToPort": "5432", "CidrIp": { "Fn::Join" : ["", [{"Ref" : "NewVpcCIDRFirst2Parts"}, ".0.0/16"]]} }
        ],
        "SecurityGroupEgress": [
          { "IpProtocol": "-1", "CidrIp": "0.0.0.0/0" }
        ],
        "Tags": [
          { "Key": "Application", "Value": { "Ref": "AWS::StackName" } },
          { "Key": "Name",  "Value": { "Ref": "NewProjectTag" } }
        ]
      }
    },
    "SgIngress1": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "GroupId": { "Ref": "VMSecurityGroup" },
        "IpProtocol": "-1",
        "SourceSecurityGroupId": { "Ref": "VMSecurityGroup" } ,
        "SourceSecurityGroupOwnerId": { "Ref": "AWS::AccountId" }
      }
    },

    "VpnSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "VpcId": { "Ref": "ProjectVpc" },
        "GroupDescription": "Security group for OpenVPN Server",
        "SecurityGroupIngress": [
          { "IpProtocol": "icmp", "FromPort": "0", "ToPort": "-1", "CidrIp": "0.0.0.0/0" },
          { "IpProtocol": "icmp", "FromPort": "8", "ToPort": "-1", "CidrIp": "0.0.0.0/0" },
\          { "IpProtocol": "tcp", "FromPort": "22", "ToPort": "22", "CidrIp": { "Fn::Join" : ["", [{"Ref" : "NewVpcCIDRFirst2Parts"}, ".0.0/20"]]} },
          { "IpProtocol": "tcp", "FromPort": "443", "ToPort": "443", "CidrIp": "0.0.0.0/0" },
          { "IpProtocol": "tcp", "FromPort": "943", "ToPort": "943", "CidrIp": "0.0.0.0/0" }
        ],
        "SecurityGroupEgress": [
          { "IpProtocol": "-1", "CidrIp": "0.0.0.0/0" }
        ],
        "Tags": [
          { "Key": "Application", "Value": { "Ref": "AWS::StackName" } },
          { "Key": "Name",  "Value": { "Fn::Join" : ["-", ["openvpn", {"Ref" : "NewProjectTag"}]]} }
        ]
      }
    }

  }
}